<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fillViewport="true"
    tools:context=".DetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_movie"
            style="@style/DetailMovieImage"
            android:contentDescription="@string/cd_movie_poster" />

        <TextView
            android:id="@+id/tv_movie_title"
            style="@style/DetailMovieTitle"
            tools:context="@string/app_name" />

        <!-- Release Date Fields -->

        <LinearLayout style="@style/DetailMovieLayout">

            <TextView
                android:id="@+id/tv_movie_date_label"
                style="@style/DetailMovieLabels"
                android:text="@string/movie_date" />

            <TextView
                android:id="@+id/tv_movie_date"
                style="@style/DetailMovieText"
                tools:context="@string/app_name" />
        </LinearLayout>

        <!-- Film Language -->
        <LinearLayout style="@style/DetailMovieLayout">

            <TextView
                android:id="@+id/tv_movie_language_label"
                style="@style/DetailMovieLabels"
                android:text="@string/language" />

            <TextView
                android:id="@+id/tv_movie_language"
                style="@style/DetailMovieText"
                tools:context="@string/app_name" />
        </LinearLayout>

        <!-- Genre Fields -->
        <LinearLayout style="@style/DetailMovieLayout">

            <TextView
                android:id="@+id/tv_movie_genre_label"
                style="@style/DetailMovieLabels"
                android:text="@string/movie_genre" />

            <TextView
                android:id="@+id/tv_movie_genre"
                style="@style/DetailMovieText"
                tools:context="@string/app_name" />

        </LinearLayout>

        <!-- Rating Fields -->
        <LinearLayout style="@style/DetailMovieLayout">

            <TextView
                android:id="@+id/tv_movie_rating_label"
                style="@style/DetailMovieLabels"
                android:text="@string/movie_rating" />

            <TextView
                android:id="@+id/tv_movie_rating"
                style="@style/DetailMovieText"
                tools:context="@string/app_name" />

        </LinearLayout>

        <!-- Film Synopsis -->
        <TextView
            android:id="@+id/tv_movie_overview"
            style="@style/DetailMovieText"
            android:layout_marginTop="@dimen/activity_margin"
            android:padding="@dimen/activity_margin"
            tools:context="@string/app_name" />

    </LinearLayout>

</ScrollView>